    "tagName": "meteo-widget",
    "options": [
      {
        "key": "language_translation",
        "type": "select",
        "label": "Language",
        "required": false,
        "options": {
          "values": ["en", "de", "it", "nl", "cs", "pl", "fr", "ru"],
          "default": "en"
        }
      },
      {
        "key": "forecast_days",
        "type": "number",
        "required": false,
        "label": "Forecast days",
        "options": {
          "default": 4,
          "min": 0,
          "max": 4,
          "step": 1
        }
      }
    ]
  }
